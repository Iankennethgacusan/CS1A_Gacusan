// Declare the favorite number
let theFavNumber = 7;
let guess;

// Loop until the correct number is guessed
while (parseInt(guess) !== theFavNumber) {
    guess = prompt("Guess my favorite number:");
    
    if (parseInt(guess) > theFavNumber) {
        console.log("Too high! Try again.");
    } else if (parseInt(guess) < theFavNumber) {
        console.log("Too low! Try again.");
    } else {
        console.log("Correct! You guessed my favorite number.");
    }
}
